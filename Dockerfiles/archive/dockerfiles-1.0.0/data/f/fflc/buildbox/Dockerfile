# base-postgres  
  
FROM debian:stretch  
  
RUN apt-get -q update && apt-get -q -y --no-install-recommends install \  
libpq-dev \  
pgtap \  
postgresql-9.6 \  
postgresql-client-9.6 \  
postgresql-client-common \  
postgresql-common \  
postgresql-contrib-9.6 \  
postgresql-server-dev-9.6 \  
sudo \  
&& apt-get clean  

