FROM deadinc/lorian:dev  
MAINTAINER Tslimshady99@hotmail.com  
  
RUN mkdir -p /usr/src/lorian  
WORKDIR /usr/src/lorian  
  
COPY . /usr/src/lorian  
  
RUN npm install  
  
ENV BOT_ISBOT=true BOT_TOKEN=token BOT_OAUTH=oauth \  
DATABASE_HOST=localhost DATABASE_PORT=28015 DATABASE_PASSWORD=
DATABASE_USER=admin \  
SETTINGS_PREFIX=++ SETTINGS_AUTODELETEMSG=true SETTINGS_DELETE_TIMEOUT=3000
SETTINGS_DELETE_TIMEOUT_LONG=6000 SETTINGS_MAXVCSLOTS=10 \  
PERMISSIONS_LEVEL1= PERMISSIONS_LEVEL2= PERMISSIONS_LEVEL3=
PERMISSIONS_MASTER= \  
BEZERK_USE=false BEZERK_URI=uri \  
ELASTICSEARCH_USE=false ELASTIC_CLIENT='{"host": "localhost:9200"}' \  
API_KEYS_IMGFLIP_USERNAME=username API_KEYS_IMGFLIP_PASSWORD=password
API_KEYS_GOOGLE=google API_KEYS_TWITCH_ID=twitch API_KEYS_IMGUR=imgur
API_KEYS_BUGSNAG=bugsnag API_KEYS_CLEVERBOT_USER=user
API_KEYS_CLEVERBOT_KEY=key  
  
RUN chmod 755 ./entrypoint.sh  
  
CMD [ "./entrypoint.sh" ]  

