# heavily based on https://github.com/gklingler/docker3d  
FROM ubuntu:16.04  
  
MAINTAINER PowerlifterDevOps  
  
RUN apt-get update \  
&& apt-get install -y mesa-utils \  
&& apt-get install -y xserver-xorg-video-all \  
&& apt-get install -y libopenal1 \  
&& apt-get install -y libvorbisfile3 \  
&& apt-get install -y libhugs-glut-bundled \  
&& apt-get install -y libfreetype6 \  
&& apt-get install -y libjpeg-turbo8 \  
&& apt-get install -y libxcb-image0 \  
&& apt-get install -y libxcb-randr0 \  
&& apt-get clean all  
  

