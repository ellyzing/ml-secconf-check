FROM centos  
  
RUN yum -y install epel-release  
  
# compilers  
RUN yum -y install gcc-c++  
  
# tools  
RUN yum -y install \  
pkgconfig \  
scons \  
gengetopt \  
doxygen \  
graphviz  
  
# dependencies  
RUN yum -y install \  
sox-devel \  
libtool \  
autoconf \  
automake \  
make \  
cmake  

