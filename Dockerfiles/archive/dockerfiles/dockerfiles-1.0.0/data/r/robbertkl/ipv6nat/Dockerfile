FROM alpine:3.7  
MAINTAINER Robbert Klarenbeek <robbertkl@renbeek.nl>  
  
RUN apk add --no-cache ip6tables  
  
ENV DOCKER_IPV6NAT_VERSION v0.3.2  
ADD https://github.com/robbertkl/docker-
ipv6nat/releases/download/${DOCKER_IPV6NAT_VERSION}/docker-ipv6nat.amd64
/docker-ipv6nat  
RUN chmod u+x /docker-ipv6nat  
  
ENTRYPOINT ["/docker-ipv6nat"]  
CMD ["--retry"]  

