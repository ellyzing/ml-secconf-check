FROM ubuntu:16.04  
# gcc for cgo  
RUN apt-get update && apt-get install -y --no-install-recommends \  
g++ \  
gcc \  
libc6-dev \  
make \  
pkg-config \  
cmake \  
swig \  
doxygen \  
curl \  
ca-certificates \  
git \  
&& rm -rf /var/lib/apt/lists/*  
  
# install golang  
ENV GOLANG_VERSION 1.7.5  
ENV GOLANG_DOWNLOAD_URL https://golang.org/dl/go$GOLANG_VERSION.linux-
amd64.tar.gz  
ENV GOLANG_DOWNLOAD_SHA256
2e4dd6c44f0693bef4e7b46cc701513d74c3cc44f2419bf519d7868b12931ac3  
  
RUN curl -fsSL "$GOLANG_DOWNLOAD_URL" -o golang.tar.gz \  
&& echo "$GOLANG_DOWNLOAD_SHA256 golang.tar.gz" | sha256sum -c - \  
&& tar -C /usr/local -xzf golang.tar.gz \  
&& rm golang.tar.gz  
  
ENV GOPATH /go  
ENV PATH $GOPATH/bin:/usr/local/go/bin:$PATH  
  
RUN mkdir -p "$GOPATH/src" "$GOPATH/bin" && chmod -R 777 "$GOPATH"  
WORKDIR $GOPATH  
  
# build virgil-crypto-go  
ADD . virgil-crypto  
RUN cd virgil-crypto \  
&& cmake -H. -B_build -DCMAKE_INSTALL_PREFIX=_install -DLANG=go
-DINSTALL_CORE_LIBS=ON \  
&& cmake --build _build --target install \  
&& go get -d gopkg.in/virgilsecurity/virgil-crypto-go.v4 \  
&& cp -r _install/* $GOPATH/src/gopkg.in/virgilsecurity/virgil-crypto-go.v4 \  
&& cd \- && rm -rf virgil-crypto  
  

