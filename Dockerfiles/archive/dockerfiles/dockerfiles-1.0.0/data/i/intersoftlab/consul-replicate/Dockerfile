FROM gliderlabs/consul:0.6  
  
RUN curl -O https://releases.hashicorp.com/consul-replicate/0.2.0/consul-
replicate_0.2.0_linux_amd64.zip \  
&& unzip consul-replicate_0.2.0_linux_amd64.zip -d /usr/local/bin/ \  
&& chmod +x /usr/local/bin/consul-replicate \  
&& rm consul-replicate_0.2.0_linux_amd64.zip  

